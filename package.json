{
  "name": "sports-coder",
  "version": "1.0.0",
  "description": "스포츠 경기 실시간 오버레이 시스템",
  "main": "server.js",
  "scripts": {
    "start": "node railway-startup-schema-fix.js && node server.js",
    "start:emergency": "node railway-emergency-schema-fix.js && node server.js",
    "start:force": "node railway-force-restart.js && node server.js",
    "start:original": "node server.js",
    "dev": "nodemon server.js",
    "dev:local": "LOCAL_DEV=true nodemon server.js",
    "migrate": "node migrate-to-postgres.js",
    "build": "npm install --production",
    "fix-schema": "node railway-startup-schema-fix.js",
    "emergency-fix": "node railway-emergency-schema-fix.js"
  },
  "dependencies": {
    "archiver": "^6.0.2",
    "body-parser": "^1.20.2",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "ejs": "^3.1.9",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.7",
    "unzipper": "^0.10.14",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
