                if (isBottom) {
                    currentInning++;
                    isBottom = false;
                } else {
                    isBottom = true;
                }
            } else {
                if (!isBottom) {
                    currentInning--;
                    isBottom = true;
                } else {
                    isBottom = false;
                }
