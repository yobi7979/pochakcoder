                                        <div class="count-dot out" id="out-2" onclick="toggleCount('out', 1)" style="width: 25px; height: 25px;"></div>
                                        <div class="count-dot out" id="out-3" onclick="toggleCount('out', 2)" style="width: 25px; height: 25px;"></div>
