                </button>
                <button class="btn btn-outline-primary" type="button" onclick="refreshWithCurrentFilter()">
                    <i class="bi bi-arrow-clockwise"></i> ÏÉàÎ°úÍ≥†Ïπ®
                </button>
                <div class="match-count">
                    Ï¥ù <span id="filtered-count">0</span>Í∞ú / <span id="total-count">0</span>Í∞ú ÌëúÏãú
                </div>
            </div>
        </div>

        <!-- Ï¢ÖÎ™©Î≥Ñ ÌÉ≠ -->
        <ul class="nav nav-tabs" id="matchTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab" aria-controls="all" aria-selected="true">
                    <i class="bi bi-grid-3x3-gap sport-icon"></i>Ï†ÑÏ≤¥
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="soccer-tab" data-bs-toggle="tab" data-bs-target="#soccer" type="button" role="tab" aria-controls="soccer" aria-selected="false">
                    <i class="bi bi-emoji-dizzy sport-icon"></i>Ï∂ïÍµ¨
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="baseball-tab" data-bs-toggle="tab" data-bs-target="#baseball" type="button" role="tab" aria-controls="baseball" aria-selected="false">
                    <i class="bi bi-circle sport-icon"></i>ÏïºÍµ¨
                </button>
            </li>
        </ul>
        
        <div class="tab-content" id="matchTabsContent">
            <!-- Ï†ÑÏ≤¥ Í≤ΩÍ∏∞ ÌÉ≠ -->
            <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
                <div class="match-grid">
                    <% if (matches.length > 0) { %>
                        <% matches.forEach(function(match) { %>
                        <div class="match-cell" id="match-cell-<%= match.id %>" 
                             data-home-team="<%= match.home_team.toLowerCase() %>" 
                             data-away-team="<%= match.away_team.toLowerCase() %>"
                             data-lists="<%= match.listIds ? match.listIds.join(',') : '' %>">
                            <div class="match-cell-header">
                                <div class="match-cell-teams">
                                    <%= match.home_team %> vs <%= match.away_team %>
                                </div>
                                <div class="match-cell-score">
                                    <%= match.home_score || 0 %> - <%= match.away_score || 0 %>
                                </div>
                            </div>
                            <div class="match-cell-info">
                                <div>Ï¢ÖÎ™©: <%= match.sport_type %></div>
                                <div>ÏÉÅÌÉú: <%= match.status %></div>
                                <div>ÏÉùÏÑ±Ïùº: <%= new Date(match.created_at).toLocaleString() %></div>
                            </div>
                            <% if (match.listInfo && match.listInfo.length > 0) { %>
                            <div class="match-cell-lists">
                                <div style="font-size: 12px; color: #6c757d; margin-bottom: 5px;">Îì±Î°ùÎêú Î¶¨Ïä§Ìä∏:</div>
                                <% match.listInfo.forEach(function(list) { %>
                                <span class="list-badge" title="<%= list.name %>">
                                    <%= list.name %>
                                </span>
                                <% }); %>
                            </div>
                            <% } %>
                        </div>
                        <% }); %>
                    <% } else { %>
                        <div class="empty-message">
                            <i class="bi bi-clipboard-x" style="font-size: 2.5rem;"></i>
                            <h3>Îì±Î°ùÎêú Í≤ΩÍ∏∞Í∞Ä ÏóÜÏäµÎãàÎã§</h3>
                            <p>ÏÉà Í≤ΩÍ∏∞Î•º ÏÉùÏÑ±Ìï¥Î≥¥ÏÑ∏Ïöî!</p>
                        </div>
                    <% } %>
                </div>
            </div>
            
            <!-- Ï∂ïÍµ¨ Í≤ΩÍ∏∞ ÌÉ≠ -->
            <div class="tab-pane fade" id="soccer" role="tabpanel" aria-labelledby="soccer-tab">
                <div class="match-grid">
                    <% 
                    const soccerMatches = matches.filter(match => match.sport_type === 'soccer');
                    if (soccerMatches.length > 0) {
                        soccerMatches.forEach(function(match) { 
                    %>
                        <div class="match-cell" id="match-cell-<%= match.id %>" 
                             data-home-team="<%= match.home_team.toLowerCase() %>" 
                             data-away-team="<%= match.away_team.toLowerCase() %>"
                             data-lists="<%= match.listIds ? match.listIds.join(',') : '' %>">
                            <div class="match-cell-header">
                                <div class="match-cell-teams">
                                    <%= match.home_team %> vs <%= match.away_team %>
                                </div>
                                <div class="match-cell-score">
                                    <%= match.home_score || 0 %> - <%= match.away_score || 0 %>
                                </div>
                            </div>
                            <div class="match-cell-info">
                                <div>ÏÉÅÌÉú: <%= match.status %></div>
                                <div>ÏÉùÏÑ±Ïùº: <%= new Date(match.created_at).toLocaleString() %></div>
                            </div>
                            <% if (match.listInfo && match.listInfo.length > 0) { %>
                            <div class="match-cell-lists">
                                <div style="font-size: 12px; color: #6c757d; margin-bottom: 5px;">Îì±Î°ùÎêú Î¶¨Ïä§Ìä∏:</div>
                                <% match.listInfo.forEach(function(list) { %>
                                <span class="list-badge" title="<%= list.name %>">
                                    <%= list.name %>
                                </span>
                                <% }); %>
                            </div>
                            <% } %>
                        </div>
                    <% }); %>
                    <% } else { %>
                        <div class="empty-message">
                            <i class="bi bi-emoji-dizzy" style="font-size: 2.5rem;"></i>
                            <h3>Ï∂ïÍµ¨ Í≤ΩÍ∏∞Í∞Ä ÏóÜÏäµÎãàÎã§</h3>
                            <p>ÏÉà Ï∂ïÍµ¨ Í≤ΩÍ∏∞Î•º ÏÉùÏÑ±Ìï¥Î≥¥ÏÑ∏Ïöî!</p>
                        </div>
                    <% } %>
                </div>
            </div>
            
            <!-- ÏïºÍµ¨ Í≤ΩÍ∏∞ ÌÉ≠ -->
            <div class="tab-pane fade" id="baseball" role="tabpanel" aria-labelledby="baseball-tab">
                <div class="match-grid">
                    <% 
                    const baseballMatches = matches.filter(match => match.sport_type === 'baseball');
                    if (baseballMatches.length > 0) {
                        baseballMatches.forEach(function(match) { 
                    %>
                        <div class="match-cell" id="match-cell-<%= match.id %>" 
                             data-home-team="<%= match.home_team.toLowerCase() %>" 
                             data-away-team="<%= match.away_team.toLowerCase() %>"
                             data-lists="<%= match.listIds ? match.listIds.join(',') : '' %>">
                            <div class="match-cell-header">
                                <div class="match-cell-teams">
                                    <%= match.home_team %> vs <%= match.away_team %>
                                </div>
                                <div class="match-cell-score">
                                    <%= match.home_score || 0 %> - <%= match.away_score || 0 %>
                                </div>
                            </div>
                            <div class="match-cell-info">
                                <div>ÏÉÅÌÉú: <%= match.status %></div>
                                <div>ÏÉùÏÑ±Ïùº: <%= new Date(match.created_at).toLocaleString() %></div>
                            </div>
                            <% if (match.listInfo && match.listInfo.length > 0) { %>
                            <div class="match-cell-lists">
                                <div style="font-size: 12px; color: #6c757d; margin-bottom: 5px;">Îì±Î°ùÎêú Î¶¨Ïä§Ìä∏:</div>
                                <% match.listInfo.forEach(function(list) { %>
                                <span class="list-badge" title="<%= list.name %>">
                                    <%= list.name %>
                                </span>
                                <% }); %>
                            </div>
                            <% } %>
                        </div>
                    <% }); %>
                    <% } else { %>
                        <div class="empty-message">
                            <i class="bi bi-circle" style="font-size: 2.5rem;"></i>
                            <h3>ÏïºÍµ¨ Í≤ΩÍ∏∞Í∞Ä ÏóÜÏäµÎãàÎã§</h3>
                            <p>ÏÉà ÏïºÍµ¨ Í≤ΩÍ∏∞Î•º ÏÉùÏÑ±Ìï¥Î≥¥ÏÑ∏Ïöî!</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // ÌéòÏù¥ÏßÄ Î°úÎìú Ïãú Ï¥ù Í≤ΩÍ∏∞ Ïàò ÏóÖÎç∞Ïù¥Ìä∏ Î∞è ÌïÑÌÑ∞ ÏÉÅÌÉú Î≥µÏõê
        document.addEventListener('DOMContentLoaded', function() {
            updateMatchCount();
            restoreFilterState();
        });

        // Í≤ÄÏÉâ Î∞è ÌïÑÌÑ∞ Í∏∞Îä•
        function filterMatches() {
            const searchTerm = document.getElementById('team-search').value.toLowerCase();
            const selectedList = document.getElementById('list-filter').value;
            const matchCells = document.querySelectorAll('.match-cell');
            let visibleCount = 0;

            matchCells.forEach(cell => {
                const homeTeam = cell.getAttribute('data-home-team');
                const awayTeam = cell.getAttribute('data-away-team');
                const lists = cell.getAttribute('data-lists');
                
                let showByTeam = true;
                let showByList = true;
                
                // ÌåÄ Ïù¥Î¶Ñ Í≤ÄÏÉâ
                if (searchTerm && !homeTeam.includes(searchTerm) && !awayTeam.includes(searchTerm)) {
                    showByTeam = false;
                }
                
                // Î¶¨Ïä§Ìä∏ ÌïÑÌÑ∞
                if (selectedList) {
                    if (!lists) {
                        showByList = false;
                    } else {
                        // Î¶¨Ïä§Ìä∏ ID Î∞∞Ïó¥Î°ú Î∂ÑÎ¶¨ÌïòÍ≥† Ï†ïÌôïÌïú ÎπÑÍµê
                        const listIds = lists.split(',').map(id => id.trim());
                        if (!listIds.includes(selectedList)) {
                            showByList = false;
                        }
                    }
                }
                
                if (showByTeam && showByList) {
                    cell.classList.remove('hidden');
                    visibleCount++;
                } else {
                    cell.classList.add('hidden');
                }
            });

            document.getElementById('filtered-count').textContent = visibleCount;
        }

        // Í≤ÄÏÉâ Ï¥àÍ∏∞Ìôî
        function clearSearch() {
            document.getElementById('team-search').value = '';
            document.getElementById('list-filter').value = '';
            const matchCells = document.querySelectorAll('.match-cell');
            matchCells.forEach(cell => {
                cell.classList.remove('hidden');
            });
            updateMatchCount();
        }

        // ÌòÑÏû¨ ÌïÑÌÑ∞ ÏÉÅÌÉúÎ°ú ÏÉàÎ°úÍ≥†Ïπ®
        function refreshWithCurrentFilter() {
            const searchTerm = document.getElementById('team-search').value;
            const selectedList = document.getElementById('list-filter').value;
            
            // URL ÌååÎùºÎØ∏ÌÑ∞Î°ú ÌòÑÏû¨ ÌïÑÌÑ∞ ÏÉÅÌÉú Ï†ÄÏû•
            const params = new URLSearchParams();
            if (searchTerm) params.set('search', searchTerm);
            if (selectedList) params.set('list', selectedList);
            
            // ÌòÑÏû¨ ÌéòÏù¥ÏßÄÎ•º ÏÉàÎ°úÍ≥†Ïπ®ÌïòÎ©¥ÏÑú ÌïÑÌÑ∞ ÏÉÅÌÉú Ïú†ÏßÄ
            const currentUrl = window.location.pathname;
            const queryString = params.toString();
            const refreshUrl = queryString ? `${currentUrl}?${queryString}` : currentUrl;
            
            window.location.href = refreshUrl;
        }

        // ÌéòÏù¥ÏßÄ Î°úÎìú Ïãú URL ÌååÎùºÎØ∏ÌÑ∞ÏóêÏÑú ÌïÑÌÑ∞ ÏÉÅÌÉú Î≥µÏõê
        function restoreFilterState() {
            const urlParams = new URLSearchParams(window.location.search);
            const searchTerm = urlParams.get('search');
            const selectedList = urlParams.get('list');
            
            if (searchTerm) {
                document.getElementById('team-search').value = searchTerm;
            }
            if (selectedList) {
                document.getElementById('list-filter').value = selectedList;
            }
            
            // ÌïÑÌÑ∞ Ï†ÅÏö©
            if (searchTerm || selectedList) {
                filterMatches();
            }
        }

        // Í≤ΩÍ∏∞ Ïàò ÏóÖÎç∞Ïù¥Ìä∏
        function updateMatchCount() {
            const totalMatches = document.querySelectorAll('.match-cell').length;
            document.getElementById('total-count').textContent = totalMatches;
            document.getElementById('filtered-count').textContent = totalMatches;
        }
    </script>
</body>
</html> 