    <script src="/js/animations.js"></script>
    <script>
        const socket = io();
        // 전역 변수로 설정하여 animations.js에서 접근 가능하도록 함
        window.socket = socket;
        let matchId = '<%= match.id %>';
        
        // 소켓 초기화 직후 연결 상태 확인
        console.log('=== 소켓 초기화 직후 상태 ===');
        console.log('socket:', socket);
        console.log('socket.connected:', socket.connected);
        console.log('matchId:', matchId);
        
        // 경기별 타이머 상태 관리 객체 (호환성 지원)
        const timerState = {
            startTime: Date.now(),
            pausedTime: 0,
            currentSeconds: 0,
            isRunning: false,
            lastServerTime: 0,
            lastUpdateTime: 0,
            localTimer: null
        };
        let homeTeamColor = '<%= match.home_team_color || "#00cc33" %>';
        let awayTeamColor = '<%= match.away_team_color || "#00cc33" %>';
        


        // 전역 상태 관리 객체
        const logoState = {
            home: {
                path: '',
                bgColor: '#ffffff',
                teamName: '<%= match.home_team %>'
            },
            away: {
                path: '',
                bgColor: '#ffffff',
                teamName: '<%= match.away_team %>'
            }
        };

        // 로고 업데이트 함수
        function updateTeamLogo(teamType, logoInfo) {
            console.log(`${teamType}팀 로고 업데이트:`, logoInfo);
            
            // 외부 로고 섹션 업데이트 (메인 로고)
            const externalLogoContainer = document.getElementById(`${teamType}-team-logo-container`);
            if (externalLogoContainer) {
                // 배경색 업데이트
                externalLogoContainer.style.backgroundColor = logoInfo.bgColor;
                
                // 로고 이미지 업데이트
                if (logoInfo.path) {
                    const img = document.createElement('img');
                    img.src = logoInfo.path;
                    img.alt = `${teamType}팀 로고`;
                    img.style.width = '100%';
                    img.style.height = '100%';
                    img.style.objectFit = 'contain';
                    
                    img.onload = () => {
                        console.log(`${teamType}팀 외부 로고 이미지 로드 완료:`, logoInfo.path);
                    };
                    
                    img.onerror = (error) => {
                        console.error(`${teamType}팀 외부 로고 이미지 로드 실패:`, error);
                        externalLogoContainer.innerHTML = `<div class="team-logo-placeholder"></div>`;
                    };
                    
                    externalLogoContainer.innerHTML = '';
                    externalLogoContainer.appendChild(img);
                } else {
                    // 로고가 없을 때는 빈 상태로 두고 배경색만 표시
                    externalLogoContainer.innerHTML = '';
                }
            }
            
            // 기존 팀 섹션 로고도 업데이트 (호환성)
            const logoContainer = document.querySelector(`.team-section.${teamType} .team-logo`);
            if (logoContainer) {
                // 배경색 업데이트
                logoContainer.style.backgroundColor = logoInfo.bgColor;
                
                // 로고 이미지 업데이트
                if (logoInfo.path) {
                    const img = document.createElement('img');
                    img.src = logoInfo.path;
                    img.alt = `${teamType}팀 로고`;
                    img.style.width = '100%';
                    img.style.height = '100%';
                    img.style.objectFit = 'contain';
                    
                    img.onload = () => {
                        console.log(`${teamType}팀 로고 이미지 로드 완료:`, logoInfo.path);
                    };
                    
                    img.onerror = (error) => {
                        console.error(`${teamType}팀 로고 이미지 로드 실패:`, error);
                        logoContainer.innerHTML = `<div class="team-logo-placeholder"></div>`;
                    };
                    
                    logoContainer.innerHTML = '';
                    logoContainer.appendChild(img);
                } else {
                    // 로고가 없을 때는 빈 상태로 두고 배경색만 표시
                    logoContainer.innerHTML = '';
                }

                // 팀 섹션 배경색 업데이트 (로고 배경색과는 별개)
                const teamSection = document.querySelector(`.team-section.${teamType}`);
                if (teamSection) {
                    // 팀 섹션은 팀 색상 유지, 로고 배경색과는 별개
                    const teamColor = teamType === 'home' ? homeTeamColor : awayTeamColor;
                    teamSection.style.backgroundColor = teamColor;
                }

                // 팀 헤더 배경색 업데이트
                const teamHeader = document.querySelector(`.team-section.${teamType} .team-header`);
                if (teamHeader) {
                    let color = logoInfo.bgColor;
                    if (color.startsWith('rgba')) {
                        color = color.replace(/^rgba\(([^,]+),([^,]+),([^,]+),[^\)]+\)/, 'rgb($1,$2,$3)');
                    }
                    teamHeader.style.backgroundColor = color;
                }
            }
        }



        // 오버레이 이미지 로드 함수
        async function loadOverlayImage() {
            try {
                const response = await fetch('/api/overlay-images/SOCCER');
                const result = await response.json();
                
                const overlayImageContainer = document.getElementById('overlayImage');
                
                if (result.success && result.images.length > 0) {
                    // 가장 최근에 업로드된 이미지를 사용
                    const latestImage = result.images[0];
                    
                    const img = document.createElement('img');
                    img.src = latestImage.path;
                    img.alt = '오버레이 이미지';
                    img.onload = () => {
                        console.log('오버레이 이미지 로드 완료:', latestImage.path);
                        overlayImageContainer.classList.add('show');
                    };
                    img.onerror = (error) => {
                        console.error('오버레이 이미지 로드 실패:', error);
                        overlayImageContainer.classList.remove('show');
                    };
                    
                    overlayImageContainer.innerHTML = '';
                    overlayImageContainer.appendChild(img);
                } else {
                    overlayImageContainer.classList.remove('show');
                }
            } catch (error) {
                console.error('오버레이 이미지 로드 오류:', error);
                document.getElementById('overlayImage').classList.remove('show');
            }
        }

        // 초기 로고 로드 함수
        async function loadInitialLogos() {
            try {
                console.log('초기 로고 정보 로드 시작');
                const response = await fetch('/api/team-logo-map/SOCCER');
                if (!response.ok) {
                    throw new Error(`팀 로고 맵 로드 실패: ${response.status}`);
                }
                
                const data = await response.json();
                console.log('팀 로고맵 로드 성공:', data);
                
                if (data && data.teamLogoMap) {
                    const homeTeamName = '<%= match.home_team %>';
                    const awayTeamName = '<%= match.away_team %>';
                    
                    // 홈팀 로고 설정
                    if (data.teamLogoMap[homeTeamName]) {
                        logoState.home = {
                            path: data.teamLogoMap[homeTeamName].path,
                            bgColor: data.teamLogoMap[homeTeamName].bgColor || '#ffffff',
                            teamName: homeTeamName
                        };
                        console.log('홈팀 로고 정보 로드:', logoState.home);
                        updateTeamLogo('home', logoState.home);
                    } else {
                        console.log('홈팀 로고 정보 없음:', homeTeamName);
                    }
                    
                    // 원정팀 로고 설정
                    if (data.teamLogoMap[awayTeamName]) {
                        logoState.away = {
                            path: data.teamLogoMap[awayTeamName].path,
                            bgColor: data.teamLogoMap[awayTeamName].bgColor || '#ffffff',
                            teamName: awayTeamName
                        };
                        console.log('원정팀 로고 정보 로드:', logoState.away);
                        updateTeamLogo('away', logoState.away);
                    } else {
                        console.log('원정팀 로고 정보 없음:', awayTeamName);
                    }
                }
            } catch (error) {
                console.error('팀 로고 정보 로드 중 오류 발생:', error);
            }
        }

        // 팀로고 가시성 업데이트 함수
        function updateTeamLogoVisibility(useLogos) {
            console.log('=== 팀로고 가시성 업데이트 시작 ===');
            console.log('useLogos:', useLogos);
            
            // 홈팀과 어웨이팀 로고 섹션
            const homeLogoSection = document.querySelector('.team-logo-section.home-logo');
            const awayLogoSection = document.querySelector('.team-logo-section.away-logo');
            
            console.log('홈팀 로고 섹션:', homeLogoSection);
            console.log('어웨이팀 로고 섹션:', awayLogoSection);
            
            // 홈팀과 어웨이팀 팀명 섹션
            const homeTeamName = document.querySelector('.team-section.home .team-name');
            const awayTeamName = document.querySelector('.team-section.away .team-name');
            
            console.log('홈팀 팀명:', homeTeamName);
            console.log('어웨이팀 팀명:', awayTeamName);
            
            if (useLogos) {
                // 팀로고 사용: 로고 표시, 팀명 위치 조정
                if (homeLogoSection) {
                    homeLogoSection.style.opacity = '1';
                    console.log('홈팀 로고 표시됨');
                }
                if (awayLogoSection) {
                    awayLogoSection.style.opacity = '1';
                    console.log('어웨이팀 로고 표시됨');
                }
                
                // 팀명 위치 조정
                if (homeTeamName) {
                    homeTeamName.style.transform = 'translateX(20px)'; // 홈팀 우측으로 100px 이동
                    console.log('홈팀명 우측으로 이동');
                }
                if (awayTeamName) {
                    awayTeamName.style.transform = 'translateX(-20px)'; // 어웨이팀 좌측으로 100px 이동
                    console.log('어웨이팀명 좌측으로 이동');
                }
                
                console.log('팀로고 표시됨, 팀명 위치 조정됨');
            } else {
                // 팀로고 사용 안함: 로고 숨김, 팀명 원래 위치
                if (homeLogoSection) {
                    homeLogoSection.style.opacity = '0';
                    console.log('홈팀 로고 숨김');
                }
                if (awayLogoSection) {
                    awayLogoSection.style.opacity = '0';
                    console.log('어웨이팀 로고 숨김');
                }
                
                // 팀명 원래 위치로 복원
                if (homeTeamName) {
                    homeTeamName.style.transform = 'translateX(0)';
                    console.log('홈팀명 원래 위치로 복원');
                }
                if (awayTeamName) {
                    awayTeamName.style.transform = 'translateX(0)';
                    console.log('어웨이팀명 원래 위치로 복원');
                }
                
                console.log('팀로고 숨김, 팀명 원래 위치로 복원');
            }
            console.log('=== 팀로고 가시성 업데이트 완료 ===');
        }

        // 경기 상태 표시 설정 로드
        async function loadMatchStateVisibility() {
            try {
                const response = await fetch('/api/soccer-match-state-visibility');
                const result = await response.json();
                
                if (result.success) {
                    const matchStateContainer = document.getElementById('matchStateContainer');
                    if (matchStateContainer) {
                        matchStateContainer.style.display = result.showMatchState ? 'block' : 'none';
                    }
                }
            } catch (error) {
                console.error('경기 상태 표시 설정 로드 오류:', error);
            }
        }

        // 소켓 연결 이벤트
        socket.on('connect', () => {
            console.log('=== 오버레이: 소켓 연결됨 ===');
            console.log('matchId:', matchId);
            console.log('socket.connected:', socket.connected);
            console.log('socket.id:', socket.id);
            
            // 이전 방에서 나가기
            socket.emit('leave_all_rooms');
            
            // 새 방에 참가
            socket.emit('join', matchId);
            console.log('방 참가 요청:', matchId);
            
            // 방 참가 확인을 위한 이벤트 리스너 추가
            socket.on('joined_room', (data) => {
                console.log('방 참가 확인:', data);
            });
            
            if (typeof isListMode !== 'undefined' && isListMode && typeof listId !== 'undefined' && listId) { 
            // 리스트 오버레이 모드일 때 리스트 오버레이 방에도 참가
            socket.emit('join_list_overlay', '<%= listId %>');
            }
            
            // 경기 상태 표시 설정 로드
            loadMatchStateVisibility();
        });

        // 소켓 연결 실패 이벤트
        socket.on('connect_error', (error) => {
            console.error('=== 소켓 연결 실패 ===');
            console.error('Error:', error);
        });

        // 소켓 재연결 이벤트
        socket.on('reconnect', (attemptNumber) => {
            console.log('=== 소켓 재연결됨 ===');
            console.log('재연결 시도 횟수:', attemptNumber);
        });

        socket.on('disconnect', () => {
            console.log('서버 연결이 끊어짐');
            timerState.lastUpdateTime = Date.now();
            startLocalTimer();
        });

        // 페이지 언로드 시 방에서 나가기
        window.addEventListener('beforeunload', () => {
            console.log('=== 페이지 언로드 - 방에서 나가기 ===');
            socket.emit('leave_all_rooms');
        });

        // match_update 이벤트 처리
        socket.on('match_update', (data) => {
            if (data.matchId === matchId) {
                console.log('경기 정보 업데이트 수신:', data);
                
                // 점수 업데이트
                if (data.home_score !== undefined) {
                    const homeScoreElement = document.querySelector('.home-score');
                    if (homeScoreElement) {
                        homeScoreElement.textContent = data.home_score;
                        console.log('홈팀 점수 업데이트:', data.home_score);
                    }
                }
                if (data.away_score !== undefined) {
                    const awayScoreElement = document.querySelector('.away-score');
                    if (awayScoreElement) {
                        awayScoreElement.textContent = data.away_score;
                        console.log('원정팀 점수 업데이트:', data.away_score);
                    }
                }
                
                // 경기 상태 업데이트
                if (data.match_data && data.match_data.state) {
                    const stateElement = document.querySelector('.state-text');
                    if (stateElement) {
                        stateElement.textContent = data.match_data.state;
                    }
                }
            }
        });



        // 실시간 경기 데이터 업데이트 이벤트 처리
        socket.on('match_data_updated', (data) => {
            console.log('=== 실시간 경기 데이터 업데이트 수신 ===');
            console.log('업데이트 데이터:', data);
            console.log('현재 matchId:', matchId);
            console.log('데이터 matchId:', data.matchId);
            console.log('matchId 일치 여부:', data.matchId === matchId);
            
            if (data.matchId === matchId) {
                // 점수 업데이트
                const homeScoreElement = document.querySelector('.home-score');
                const awayScoreElement = document.querySelector('.away-score');
                
                console.log('홈팀 점수 요소:', homeScoreElement);
                console.log('원정팀 점수 요소:', awayScoreElement);
                
                if (homeScoreElement && data.home_score !== undefined) {
                    homeScoreElement.textContent = data.home_score;
                    console.log('홈팀 점수 실시간 업데이트:', data.home_score);
                }
                if (awayScoreElement && data.away_score !== undefined) {
                    awayScoreElement.textContent = data.away_score;
                    console.log('원정팀 점수 실시간 업데이트:', data.away_score);
                }
                
                // 경기 상태 업데이트
                const stateElement = document.querySelector('.state-text');
                if (stateElement && data.state) {
                    stateElement.textContent = data.state;
                    console.log('경기 상태 실시간 업데이트:', data.state);
                }
            } else {
                console.log('matchId가 일치하지 않아 업데이트를 건너뜀');
            }
        });

        // 경기 수정 이벤트
        socket.on('match_updated', (data) => {
            if (data.matchId === matchId) {
                console.log('경기 수정 이벤트 수신:', data);
                
                // 팀명 업데이트
                const homeTeamElement = document.getElementById('home-team-name');
                const awayTeamElement = document.getElementById('away-team-name');
                
                if (homeTeamElement && data.home_team) {
                    homeTeamElement.textContent = data.home_team;
                    console.log('홈팀명 업데이트:', data.home_team);
                }
                if (awayTeamElement && data.away_team) {
                    awayTeamElement.textContent = data.away_team;
                    console.log('원정팀명 업데이트:', data.away_team);
                }
                
                // 종목 업데이트 (필요한 경우)
                if (data.sport_type && data.sport_type !== currentSportType) {
                    currentSportType = data.sport_type;
                    console.log('종목 변경됨:', currentSportType);
                }
                
                // 점수 업데이트
                const homeScoreElement = document.querySelector('.home-score');
                const awayScoreElement = document.querySelector('.away-score');
                
                if (homeScoreElement && data.home_score !== undefined) {
                    homeScoreElement.textContent = data.home_score;
                }
                if (awayScoreElement && data.away_score !== undefined) {
                    awayScoreElement.textContent = data.away_score;
                }
            }
        });

        // 통합된 타이머 상태 수신 처리 (호환성 지원)
        function handleTimerUpdate(data) {
            console.log('=== 타이머 상태 수신 ===');
            console.log('수신된 데이터:', data);
            console.log('현재 matchId:', matchId);
            console.log('수신된 matchId:', data.matchId);
            
            // 현재 표시 중인 경기의 타이머만 처리
            if (data.matchId !== matchId) {
                console.log('다른 경기의 타이머 상태이므로 무시:', data.matchId);
                return;
            }
            
            console.log('현재 경기의 타이머 상태 업데이트');
            
            let currentSeconds = 0;
            let serverIsRunning = false;
            
            // 새로운 독립 타이머 시스템 지원
            if (data.startTime && data.pausedTime !== undefined) {
                // 0값 무시 로직: 현재 타이머가 0이 아닌데 서버에서 0을 받으면 무시
                if (timerState.currentSeconds > 0 && data.pausedTime === 0) {
                    console.log('현재 타이머가 0이 아닌데 서버에서 0을 받음 - 무시:', {
                        currentTimer: timerState.currentSeconds,
                        serverPausedTime: data.pausedTime
                    });
                    return;
                }
                
                timerState.startTime = data.startTime;
                timerState.pausedTime = data.pausedTime;
                timerState.isRunning = data.isRunning || false;
                serverIsRunning = timerState.isRunning;
                
                if (timerState.isRunning) {
                    const clientTime = Date.now();
                    const elapsedTime = Math.floor((clientTime - timerState.startTime) / 1000);
                    currentSeconds = timerState.pausedTime + elapsedTime;
                } else {
                    currentSeconds = timerState.pausedTime;
                }
                
                console.log('새로운 타이머 시스템:', {
                    startTime: timerState.startTime,
                    pausedTime: timerState.pausedTime,
                    isRunning: timerState.isRunning,
                    currentSeconds
                });
                
            } else {
                // 기존 방식 호환성 지원
