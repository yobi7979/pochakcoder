        // 타이머 동기화 전용 함수
        function syncTimerWithMatch(matchData) {
            console.log('=== 타이머 동기화 시작 ===');
            console.log('동기화할 타이머 데이터:', matchData);
            
            // 1. 기존 타이머 정리
            if (timerState.localTimer) {
                clearInterval(timerState.localTimer);
                timerState.localTimer = null;
                console.log('기존 로컬 타이머 정리 완료');
            }
            
            // 2. 새 경기의 타이머 정보 추출
            const currentSeconds = Math.max(0, matchData.currentSeconds || matchData.timer || 0);
            const isRunning = matchData.isRunning || false;
            
            console.log('추출된 타이머 정보:', { currentSeconds, isRunning });
            
            // 3. UI 업데이트
            timerState.currentSeconds = currentSeconds;
            updateTimerDisplay();
            
            // 4. 로컬 타이머 변수 동기화
            timerState.lastServerTime = currentSeconds;
            timerState.lastUpdateTime = Date.now();
            console.log('로컬 타이머 변수 동기화:', { lastServerTime: timerState.lastServerTime, lastUpdateTime: timerState.lastUpdateTime });
            
            // 5. 타이머 상태에 따라 로컬 타이머 제어
            if (isRunning) {
                console.log('타이머가 실행 중이므로 로컬 타이머 시작');
                startLocalTimer();
            } else {
                console.log('타이머가 정지 상태이므로 로컬 타이머 중지');
            }
            
            console.log('타이머 동기화 완료:', { currentSeconds, isRunning });
        }
        
        // 서버에서 타이머 상태 요청 함수
        function requestTimerStateFromServer(matchId) {
            console.log('=== 서버에 타이머 상태 요청 ===');
            console.log('요청할 matchId:', matchId);
            
            // 서버에 타이머 상태 요청
            socket.emit('request_timer_state', { matchId: matchId });
        }

        // 로컬 타이머 시작 (호환성 지원)
        function startLocalTimer() {
            if (timerState.localTimer) {
                console.log('기존 로컬 타이머 중지 후 재시작');
                clearInterval(timerState.localTimer);
                timerState.localTimer = null;
            }
            
            console.log('로컬 타이머 시작:', { 
                lastServerTime: timerState.lastServerTime, 
                lastUpdateTime: timerState.lastUpdateTime,
                startTime: timerState.startTime,
                pausedTime: timerState.pausedTime,
                isRunning: timerState.isRunning
            });
            
            timerState.localTimer = setInterval(() => {
                if (timerState.isRunning) {
                    let newSeconds = 0;
                    
                    // 새로운 독립 타이머 시스템 지원
                    if (timerState.startTime && timerState.pausedTime !== undefined) {
                        // startTime이 0이면 pausedTime을 그대로 사용 (리셋된 상태)
                        if (timerState.startTime === 0) {
                            newSeconds = Math.max(0, timerState.pausedTime);
                        } else {
                            const currentTime = Date.now();
                            const elapsedTime = Math.floor((currentTime - timerState.startTime) / 1000);
                            newSeconds = Math.max(0, timerState.pausedTime + elapsedTime);
                        }
                    } else {
                        // 기존 방식 호환성 지원
                        const currentTime = Date.now();
                        const timeDiff = Math.floor((currentTime - timerState.lastUpdateTime) / 1000);
                        newSeconds = Math.max(0, timerState.lastServerTime + timeDiff);
                    }
                    
                    timerState.currentSeconds = newSeconds;
                    updateTimerDisplay();
                    

                }
            }, 1000);
            
            console.log('로컬 타이머 시작 완료');
        }
        
                // 로컬 타이머 중지
        function stopLocalTimer() {
            if (timerState.localTimer) {
                console.log('로컬 타이머 중지');
                clearInterval(timerState.localTimer);
                timerState.localTimer = null;
            }
        }

        // 타이머 표시 업데이트
        function updateTimerDisplay() {
            // 음수 값 방지
            const safeSeconds = Math.max(0, timerState.currentSeconds);
            const minutes = Math.floor(safeSeconds / 60);
            const seconds = safeSeconds % 60;
            const timerElement = document.querySelector('.match-time');
            if (timerElement) {
                const formattedTime = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                timerElement.textContent = formattedTime;
                console.log('로컬 타이머 업데이트:', formattedTime, '(현재 경기:', matchId, ')');
            } else {
                console.error('타이머 요소를 찾을 수 없습니다.');
            }
        }
        
        // 강제 타이머 업데이트 함수 (디버깅용)
        function forceUpdateTimer(seconds) {
            console.log('=== 강제 타이머 업데이트 ===');
            console.log('업데이트할 시간:', seconds);
            
            timerState.currentSeconds = seconds;
            updateTimerDisplay();
            console.log('강제 타이머 업데이트 완료:', seconds);
        }

        // 팀 색상 업데이트 함수
        function updateTeamColors(homeColor, awayColor) {
